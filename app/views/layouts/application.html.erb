<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <%= favicon_pack_tag "media/images/favicon/apple-touch-icon.png" %>
    <%= favicon_pack_tag "media/images/favicon/favicon-32x32.png" %>
    <%= favicon_pack_tag "media/images/favicon/favicon-16x16.png" %>
  </head>

  <body>
    <% if current_user.present? %>
      <%= render 'layouts/nav' %>
    <% end %>

    <%= yield %>
  </body>

</html>
